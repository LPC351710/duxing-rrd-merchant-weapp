page {
  height: 100%;
  width: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.main-btn {
    background-color: #ff6600;
    text-align: center;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    color: white;
    font-size: 32rpx;
    border-radius: 8rpx;
}

.main-btn-hover {
  opacity: 0.7;
}

.error-hint {
  display: inline-flex;
  justify-content: center;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}

.error-hint-icon {
  margin-top: 40%;
  width: 200rpx;
  height: 200rpx;
}